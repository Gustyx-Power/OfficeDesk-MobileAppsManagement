<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="366dp"
        android:layout_height="122dp"
        android:scaleType="fitXY"
        android:src="@drawable/shapeflag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="321dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_image"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/tagline_image"
        android:layout_width="332dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/texthome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_image"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/username_password_background"
        android:layout_width="356dp"
        android:layout_height="237dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_vector"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagline_image"
        tools:ignore="ContentDescription,VisualLintBounds" />

    <ImageView
        android:id="@+id/usernametext"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        android:src="@drawable/username_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline_image"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/username"
        android:layout_width="319dp"
        android:layout_height="51dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/background_username_password"
        android:hint="Masukkan Username"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#F0203B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline_image"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields" />

    <ImageView
        android:id="@+id/passwordtext"
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="124dp"
        android:scaleType="fitXY"
        android:src="@drawable/password_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline_image"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/password"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/background_username_password"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#F0203B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline_image"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

    <CheckBox
        android:id="@+id/rememberMeCheckBox"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="208dp"
        android:text="Simpan Login"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline_image"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/signup"
        android:layout_width="179dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sign_button"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_password_background"
        app:layout_constraintWidth_percent="0.45"
        tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText,MissingConstraints,SpeakableTextPresentCheck,VisualLintBounds" />

    <ImageButton
        android:id="@+id/login"
        android:layout_width="140dp"
        android:layout_height="61dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_button"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/signup"
        app:layout_constraintTop_toBottomOf="@+id/username_password_background"
        app:layout_constraintWidth_percent="0.45"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints,SpeakableTextPresentCheck,VisualLintBounds" />

</androidx.constraintlayout.widget.ConstraintLayout>
