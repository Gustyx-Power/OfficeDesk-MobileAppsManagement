<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InlineActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewVector"
        android:layout_width="731dp"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        android:src="@drawable/shapeflag"
        tools:ignore="MissingConstraints,VisualLintBounds" />


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="289dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageViewVector"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/todo2"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewVector"
        app:layout_constraintVertical_bias="0.126"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/button_login"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imageViewLogo"
        android:layout_alignBottom="@+id/imageViewLogo"
        android:background="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        android:src="@drawable/button_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        tools:ignore="DuplicateSpeakableTextCheck,MissingConstraints,TouchTargetSizeCheck,VisualLintBounds" />


</androidx.constraintlayout.widget.ConstraintLayout>
